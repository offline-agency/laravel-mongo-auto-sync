{
    "name": "offline-agency/laravel-mongo-auto-sync",
    "description": "This package provides a better support for MongoDB relationships in Laravel Projects.",
    "type": "library",
    "keywords": ["laravel","database","mongodb","eloquent", "relationships"],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-mongodb": "*",
        "illuminate/support": "^5.8|^6.0",
        "illuminate/container": "^5.8|^6.0",
        "illuminate/database": "^5.8|^6.0",
        "illuminate/events": "^5.8|^6.0",
        "jenssegers/mongodb": "3.6.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0|^8.0",
        "orchestra/testbench": "^3.1|^4.0",
        "mockery/mockery": "^1.0",
        "doctrine/dbal": "^2.5",
        "phpunit/phpcov": "^6.0",
        "cedx/coveralls": "^11.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Offline Agency",
            "email": "info@offlineagency.it"
        }
    ],
    "autoload": {
        "psr-4": {
            "OfflineAgency\\MongoAutoSync\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "src/syncUtils.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "OfflineAgency\\MongoAutoSync\\MongoAutoSyncServiceProvider"
            ]
        }
    }
}
